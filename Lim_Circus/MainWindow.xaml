<Window x:Class="Lim_Circus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lim_Circus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,148,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Login_TB" HorizontalAlignment="Center" Margin="0,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,212,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password_PB" HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Login_BTN" Content="Авторизоваться" HorizontalAlignment="Center" Margin="0,277,0,0" VerticalAlignment="Top" Click="Login_BTN_Click"/>

    </Grid>
</Window>
